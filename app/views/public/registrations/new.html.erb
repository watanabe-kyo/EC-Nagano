<%= render 'public/header' %>
<div class="container">
	<h2>新規会員登録</h2>

	<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>

		<%= render "devise/shared/error_messages", resource: resource %>

		<div class="field">
			<%= f.label :last_name, "姓" %>
			<%= f.text_field :last_name, autofocus: true %>
			<%= f.label :first_name, "名" %>
			<%= f.text_field :first_name %>
		</div>
		<div class="field">
			<%= f.label :last_name_kana, "セイ" %>
			<%= f.text_field :last_name_kana %>

			<%= f.label :first_name_kana, "メイ" %>
			<%= f.text_field :first_name_kana %>
		</div>
		<div class="field">
			<%= f.label :email, "メールアドレス" %><br />
			<%= f.email_field :email %>
		</div>
		<div class="field">
			<%= f.label :postal_code, "郵便番号" %><br />
			<%= f.text_field :postal_code %>
		</div>
		<div class="field">
			<%= f.label :address, "住所" %><br />
			<%= f.text_field :address %>
		</div>
		<div class="field">
			<%= f.label :telephone_number, "電話番号" %><br />
			<%= f.text_field :telephone_number %>
		</div>
		<div class="field">
			<%= f.label :password, "パスワード（6文字以上）" %><br />
			<%= f.text_field :password %>
		</div>
		<div class="field">
			<%= f.label :encrypted_password, "パスワード（確認用）" %><br />
			<%= f.text_field :encrypted_password %>
		</div>
		<%= f.submit "新規登録" %>
	<% end %>
</div>




