<%= render 'public/header' %>
<div class="container">
	<h2>注文履歴一覧</h2>
	<table class="table table-bordered">
		<thead>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
					<td>
						<%= order.postal_code %><br>
						<%= order.address %><br>
						<%= order.name %><br>
					</td>
					<td>
						<% order.order_details.each do |orderdetail| %>
							<%= orderdetail.item.name %><br>
						<% end %>
					</td>
					<td><%= order.total_payment.to_s(:delimited) %>円</td>
					<td><%= order.status %></td>
					<td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>