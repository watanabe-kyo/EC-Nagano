<%= render 'public/header' %>
<div class="container">
	<h2>登録情報編集</h2>
	<%= form_with model: current_customer, url: customer_path, method: :patch do |f| %>

		<div class="field">
			<%= f.label :last_name, "姓" %>
			<%= f.text_field :last_name, autofocus: true %>
			<%= f.label :first_name, "名" %>
			<%= f.text_field :first_name %>
		</div>
		<div class="field">
			<%= f.label :last_name_kana, "セイ" %>
			<%= f.text_field :last_name_kana %>

			<%= f.label :first_name_kana, "メイ" %>
			<%= f.text_field :first_name_kana %>
		</div>
		<div class="field">
			<%= f.label :email, "メールアドレス" %><br />
			<%= f.email_field :email %>
		</div>
		<div class="field">
			<%= f.label :postal_code, "郵便番号" %><br />
			<%= f.text_field :postal_code %>
		</div>
		<div class="field">
			<%= f.label :address, "住所" %><br />
			<%= f.text_field :address %>
		</div>
		<div class="field">
			<%= f.label :telephone_number, "電話番号" %><br />
			<%= f.text_field :telephone_number %>
		</div>
		<%= f.submit "編集内容を保存する" %>
	<% end %>

	<%= link_to "退会する", customers_unsubscribe_path %>
</div>