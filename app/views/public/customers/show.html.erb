<%= render 'public/header' %>
<div class="container">
	<h2>マイページ</h2>
	<h3><b>登録情報</b><%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-primary" %><%= link_to "パスワードを変更する", "",class: "btn btn-primary" %></h3>
	<table class="table table-bordered">
		<tr>
			<td>氏名</td>
			<td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
		</tr>
		<tr>
			<td>カナ</td>
			<td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
		</tr>
		<tr>
			<td>郵便番号</td>
			<td><%= current_customer.postal_code %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= current_customer.address %></td>
		</tr>
		<tr>
			<td>電話番号</td>
			<td><%= current_customer.telephone_number %></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td><%= current_customer.email %></td>
		</tr>
	</table>
	<table>
		<tr>
			<td><b>配送先</b></td>
			<td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></td>
		</tr>
		<tr>
			<td><b>注文履歴</b></td>
			<td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
		</tr>
	</table>
</div>