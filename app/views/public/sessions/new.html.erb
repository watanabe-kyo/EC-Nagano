<%= render 'public/header' %>
<div class="container">
	<h2>会員の方はこちらからログイン</h2>

	<%= form_with model: @customer, url: customer_session_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>

		<%= render "devise/shared/error_messages", resource: resource %>

		<div class="field">
			<%= f.label :email, "メールアドレス" %><br />
			<%= f.email_field :email, autofocus: true %>
		</div>
		<div class="field">
			<%= f.label :password, "パスワード" %><br />
			<%= f.text_field :password %>
		</div>
		<% if devise_mapping.rememberable? %>
		    <div class="field">
		      <%= f.check_box :remember_me %>
		      <%= f.label :remember_me, "ログインを保持" %>
		    </div>
		  <% end %>

		<%= f.submit "ログイン" %>
	<% end %><br><br><br>

	<h2>登録がお済みでない方</h2>
	<%= link_to "こちら", new_customer_registration_path, class: "text-dark" %>から新規登録を行ってください。
</div>