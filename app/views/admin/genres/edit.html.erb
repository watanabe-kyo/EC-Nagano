<%= render 'admin/header' %>

<h2>ジャンル編集</h2>

<%= form_with model:@genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
	<%= f.label :name, "ジャンル" %>
	<%= f.text_field :name %>
	<%= f.label :is_active, "有効" %>
	<%= f.radio_button :is_active, :true %>
	<%= f.label :is_active, "無効" %>
	<%= f.radio_button :is_active, :false %>
	<%= f.submit "変更を保存する" %>
<% end %>