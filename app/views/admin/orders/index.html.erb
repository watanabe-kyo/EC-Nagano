<%= render 'admin/header' %>
<div class="container">
	<h2>注文履歴一覧</h2>
	<table class="table">
		<thead>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order), class: "text-dark" %></td>
					<td><%= order.customer.last_name %><%= order.customer.first_name %></td>
					<td>
						<% @amount = 0 %>
						<% order.order_details.each do |orderdetail| %>
							<% @amount += orderdetail.amount %>
						<% end %>
						<%= @amount %>
					</td>
					<td><%= order.status %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>



