<%= render 'admin/header' %>
<div class="container">
	<h2><%= @customer.last_name %><%= @customer.first_name %></h2>
	<div class="row">
		<table>
			<tr>
				<td>顧客ID</td>
				<td><%= @customer.id %>
					<% if @customer.is_active == true %>
						有効会員
					<% else %>
						無効会員
					<% end %>
				</td>
			</tr>
			<tr>
				<td>氏名</td>
				<td><%= @customer.last_name %><%= @customer.first_name %></td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td>〒<%= @customer.postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td><%= @customer.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td><%= @customer.telephone_number %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td><%= @customer.email %></td>
			</tr>
		</table>
	</div>

	<%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-primary" %>
	<%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary" %>
</div>