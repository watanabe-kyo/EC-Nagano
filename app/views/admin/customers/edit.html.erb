<%= render 'admin/header' %>
<div class="container">
	<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
	<div class="row">
		<%= form_with model:@customer, url: admin_customer_path(@customer), local: true do |f| %>
			<table>
				<tr>
					<td>会員ID</td>
					<td><%= @customer.id %></td>
				</tr>
				<tr>
					<td>氏名</td>
					<td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
				</tr>
				<tr>
					<td>フリガナ</td>
					<td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= f.number_field :postal_code %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= f.text_area :address %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= f.number_field :telephone_number %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= f.text_field :email %></td>
				</tr>
				<tr>
					<td>会員ステータス</td>
					<td>
						<%= f.radio_button :is_active, :true %>
						<%= f.label :is_active, "有効" %>
						<%= f.radio_button :is_active, :false %>
						<%= f.label :is_active, "退会済み" %>
					</td>
				</tr>
			</table>
			<%= f.submit '変更を保存する', class: "btn btn-primary" %>
		<% end %>
	</div>
</div>