<%= render 'admin/header' %>
<div class="container">
	<h2>管理者ログインページ</h2>

	<%= form_with model: @admin, url: admin_session_path, id: 'new_admin', class: 'new_admin', local: true do |f| %>

		<%= render "devise/shared/error_messages", resource: resource %>

		<div class="field">
			<%= f.label :email, "メールアドレス" %><br />
			<%= f.email_field :email, autofocus: true %>
		</div>
		<div class="field">
			<%= f.label :password, "パスワード" %><br />
			<%= f.password_field :password, autocomplete: "current_password" %>
		</div>
		<% if devise_mapping.rememberable? %>
		    <div class="field">
		      <%= f.check_box :remember_me %>
		      <%= f.label :remember_me, "ログインを保持" %>
		    </div>
		  <% end %>

		<%= f.submit "ログイン" %>
	<% end %>
</div>